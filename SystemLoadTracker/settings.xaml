<Window x:Name="settings_window" x:Class="SystemLoadTracker.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemLoadTracker"
        mc:Ignorable="d"
        
        MouseLeftButtonDown="Window_MouseLeftButtonDown"

        RenderOptions.ClearTypeHint="Enabled"
        
        Title="settings" Height="512" Width="384" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Transparent" AllowsTransparency="True">

    <Border x:Name="settingsWindowCorner" CornerRadius="6" Background="#FF404040">

        <Grid>
            <Border x:Name="closeButtonBorder" CornerRadius="0,6,0,0" BorderThickness="0" Margin="362,0,0,0" Width="22" Height="22" VerticalAlignment="Top"/>
            <Label x:Name="closeButton" Content="&#xE711;" Canvas.Left="278" Foreground="White" Height="22" Width="22" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe Fluent Icons" Margin="362,0,0,0">
                <Label.Style>
                    <Style TargetType="Label">
                        <EventSetter Event="MouseEnter" Handler="CloseButton_MouseEnter"/>
                        <EventSetter Event="MouseLeave" Handler="CloseButton_MouseLeave"/>
                        <EventSetter Event="MouseDown"  Handler="CloseButton_MouseDown"/>
                    </Style>
                </Label.Style>
            </Label>

            <Rectangle HorizontalAlignment="Center" Height="30" Margin="0,60,0,0" VerticalAlignment="Top" Width="384" Fill="#FF525252"/>
            <Rectangle HorizontalAlignment="Center" Height="30" Margin="0,120,0,0" VerticalAlignment="Top" Width="384" Fill="#FF525252"/>
            <Rectangle HorizontalAlignment="Center" Height="30" Margin="0,180,0,0" VerticalAlignment="Top" Width="384" Fill="#FF525252"/>
            <Rectangle HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="384" Fill="#FF525252"/>
            <Rectangle HorizontalAlignment="Center" Height="30" Margin="0,300,0,0" VerticalAlignment="Top" Width="384" Fill="#FF525252"/>
            <Rectangle HorizontalAlignment="Center" Height="30" Margin="0,360,0,0" VerticalAlignment="Top" Width="384" Fill="#FF525252"/>

            <Label x:Name="settingsLabel" Content="Settings" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Foreground="White" Padding="0,0,0,0" Height="36" Width="93"/>
            <Label x:Name="FixedWindowLabel" Content="Fixed Window" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" Foreground="White" FontSize="14" FontWeight="Bold" Height="20"/>
            <Label x:Name="ThemeLabel" Content="Theme" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" Foreground="#FF5F5F5F" FontSize="14" FontWeight="Bold" Height="20"/>
            <Label x:Name="SystemTrayLabel" Content="Close to system tray" HorizontalAlignment="Left" Margin="10,335,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" Foreground="#FF5F5F5F" FontWeight="Bold" Height="20"/>
            <Label x:Name="AlwaysOnTopLabel" Content="Always on top" HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" Foreground="White" FontWeight="Bold" Height="20"/>
            <Label x:Name="PCStartupLabel" Content="Start app on PC startup" HorizontalAlignment="Left" Margin="10,305,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" Foreground="#FF5F5F5F" FontWeight="Bold" Height="20"/>
            <Label x:Name="OpacityLabel" Content="Opacity" HorizontalAlignment="Left" Margin="10,214,0,0" VerticalAlignment="Top" Padding="0,0,0,0" FontSize="14" Foreground="White" FontWeight="Bold" Height="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="RefreshTimeLabel" Content="Refresh time" HorizontalAlignment="Left" Margin="10,365,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" Foreground="White" FontWeight="Bold" Height="20"/>
            <Label x:Name="FixedWindowCheckbox" Content="" HorizontalAlignment="Left" Margin="354,0,0,0" VerticalAlignment="Center" FontSize="14" Foreground="White" FontFamily="Segoe Fluent Icons" Background="#FF737373" BorderBrush="#FF737373" BorderThickness="2" Width="20" Height="20" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="FixedWindowCheckbox_MouseDown"/>
            <Label x:Name="SystemTrayCheckbox" Content="" HorizontalAlignment="Left" Margin="354,335,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White" FontFamily="Segoe Fluent Icons" Background="#FF737373" BorderBrush="#FF737373" BorderThickness="2" Width="20" Height="20" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="AlwaysOnTopCheckbox" Content="" HorizontalAlignment="Left" Margin="354,275,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White" FontFamily="Segoe Fluent Icons" Background="#FF737373" BorderBrush="#FF737373" BorderThickness="2" Width="20" Height="20" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="AlwaysOnTopCheckbox_MouseDown"/>
            <Label x:Name="PCStartupCheckbox" Content="" HorizontalAlignment="Left" Margin="354,305,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White" FontFamily="Segoe Fluent Icons" Background="#FF737373" BorderBrush="#FF737373" BorderThickness="2" Width="20" Height="20" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Slider x:Name="opacitySlider" HorizontalAlignment="Left" Margin="254,215,0,0" VerticalAlignment="Top" Width="120" IsSnapToTickEnabled="True" Minimum="0.1" Maximum="1" TickFrequency="0.2" ValueChanged="Slider_ValueChanged" Value="1" Height="18" SmallChange="0.2"/>


            <Border x:Name="borderRefreshTime" CornerRadius="6" BorderBrush="White" BorderThickness="2" Margin="252,363,12,125"/>
            <Label x:Name="RefreshTimeCheckbox05" Content=".5s" HorizontalAlignment="Left" Margin="254,365,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" FontWeight="Bold" Height="20" Width="37" VerticalContentAlignment="Center" Foreground="#FFB0B0B0" Background="{x:Null}" MouseDown="RefreshTimeCheckbox05_MouseDown"/>
            <Label x:Name="RefreshTimeCheckbox1" Content="1s" HorizontalAlignment="Left" Margin="292,365,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" FontWeight="Bold" Height="20" Width="39" VerticalContentAlignment="Center" Foreground="#FF5F5F5F" Background="White" MouseDown="RefreshTimeCheckbox1_MouseDown"/>
            <Label x:Name="RefreshTimeCheckbox2" Content="2s" HorizontalAlignment="Left" Margin="331,365,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" FontWeight="Bold" Height="20" Width="39" VerticalContentAlignment="Center" Foreground="#FFB0B0B0" MouseDown="RefreshTimeCheckbox2_MouseDown" Background="{x:Null}"/>
            <Rectangle x:Name="RefreshTimeSeperator1" HorizontalAlignment="Left" Height="22" Margin="290,365,0,0" VerticalAlignment="Top" Width="2" Fill="White"/>
            <Rectangle x:Name="RefreshTimeSeperator2" HorizontalAlignment="Left" Height="22" Margin="330,365,0,0" VerticalAlignment="Top" Width="2" Fill="White"/>


            <Border x:Name="ThemeBoxAuto" BorderBrush="#FF5F5F5F" BorderThickness="2,2,2,2" HorizontalAlignment="Left" Height="24" Margin="162,63,0,0" VerticalAlignment="Top" Width="212" CornerRadius="6"/>

            <Label x:Name="ThemeLabel_Auto" Content="Auto" HorizontalAlignment="Left" Margin="164,61,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" FontWeight="Bold" Height="26" Width="70" VerticalContentAlignment="Center" Foreground="#FF5F5F5F" Background="{x:Null}"/>
            <Label x:Name="ThemeLabel_Dark" Content="Dark" HorizontalAlignment="Left" Margin="234,61,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" FontWeight="Bold" Height="26" Width="68" VerticalContentAlignment="Center" Foreground="#FF5F5F5F"/>
            <Label x:Name="ThemeLabel_Light" Content="Light" HorizontalAlignment="Left" Margin="304,61,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Padding="0,0,0,0" FontSize="14" FontWeight="Bold" Height="26" Width="68" VerticalContentAlignment="Center" Foreground="#FF5F5F5F"/>
            <Label x:Name="CPUColorLabel" Content="CPU Color" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" Foreground="#FF5F5F5F" FontSize="14" FontWeight="Bold" Height="20"/>
            <Label x:Name="GPUColorLabel" Content="GPU Color" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" Foreground="#FF5F5F5F" FontSize="14" FontWeight="Bold" Height="20"/>

            <Label x:Name="CornerRadiusLabel" Content="Corner radius" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" Foreground="White" FontSize="14" FontWeight="Bold" Height="20"/>
            <Slider x:Name="cornerRadiusSlider" HorizontalAlignment="Left" Margin="254,156,0,0" VerticalAlignment="Top" Width="120" IsSnapToTickEnabled="True" Minimum="1" ValueChanged="cornerRadiusSlider_ValueChanged" Value="5.5" Height="18" SmallChange="0.5" TickFrequency="0.5"/>

            <Label x:Name="ShowBorderLabel" Content="Show border" HorizontalAlignment="Left" Margin="10,185,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" Foreground="White" FontSize="14" FontWeight="Bold" Height="20"/>
            <Label x:Name="showBorderCheckbox" Content="" HorizontalAlignment="Left" Margin="354,185,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White" FontFamily="Segoe Fluent Icons" Background="#FF737373" BorderBrush="#FF737373" BorderThickness="2" Width="20" Height="20" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="showBorderCheckbox_MouseDown"/>
            <Rectangle x:Name="RefreshTimeSeperator1_Copy" HorizontalAlignment="Left" Height="22" Margin="234,65,0,0" VerticalAlignment="Top" Width="2" Fill="#FF5F5F5F"/>
            <Rectangle x:Name="RefreshTimeSeperator1_Copy1" HorizontalAlignment="Left" Height="22" Margin="304,65,0,0" VerticalAlignment="Top" Width="2" Fill="#FF5F5F5F"/>



        </Grid>

    </Border>
</Window>
