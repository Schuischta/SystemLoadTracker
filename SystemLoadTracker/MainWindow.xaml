<Window x:Class="SystemLoadTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        TextOptions.TextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        RenderOptions.BitmapScalingMode="HighQuality"
        Title="SystemLoadTracker" Height="230" Width="430" ResizeMode="NoResize" Background="#FF545454" UseLayoutRounding="True" WindowStartupLocation="CenterScreen" WindowStyle="None" Icon="/SLT_icon.png">
    <Canvas Background="#FF404040" Margin="0,0,20,19" Height="230" MinWidth="430" MinHeight="230">
        <ProgressBar x:Name="progressbarCPU" Height="37" Canvas.Left="-61" Canvas.Top="99" Width="194" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="progressbarGPU" Height="37" Canvas.Left="146" Canvas.Top="99" Width="194" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="progressbarRAM" Height="25" Canvas.Top="190" Width="142" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="63">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="progressbarCPUtemp" Height="25" Canvas.Top="136" Width="142" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" Canvas.Left="63" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="progressbarVRAM" Height="25" Canvas.Top="190" Width="142" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" Canvas.Left="272" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="progressbarGPUtemp" Height="25" Canvas.Top="136" Width="142" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" Canvas.Left="272" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Label x:Name="labelCPU" Content="CPU" Canvas.Left="63" Canvas.Top="16" Height="31" Width="50" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="18"/>
        <Label x:Name="labelGPU" Content="GPU" Canvas.Left="272" Canvas.Top="16" Height="29" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5,3,5,5"/>
        <Label x:Name="labelCpuClock" Content="0" Canvas.Left="63" Canvas.Top="41" Height="30" Width="75" Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Segoe UI" FontWeight="Bold"/>
        <Label x:Name="labelCPUMHz" Content="MHz" Canvas.Left="59" Canvas.Top="61" Height="28" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labelGpuClock" Content="0" Canvas.Left="272" Canvas.Top="41" Height="28" Width="75" Foreground="White" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5,3,5,5"/>
        <Label x:Name="labelGPUMHz" Content="MHz" Canvas.Left="268" Canvas.Top="61" Height="28" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5,4,5,5"/>
        <Label x:Name="labelCPUtemperature" Content="Temperature" Canvas.Left="57" Canvas.Top="111" Height="28" Width="120" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labelCPUram" Content="RAM" Canvas.Left="59" Canvas.Top="164" Height="28" Width="120" Foreground="White" FontFamily="Arial" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labelGPUtemperature" Content="Temperature" Canvas.Left="267" Canvas.Top="111" Height="28" Width="120" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labelGPUvram" Content="VRAM" Canvas.Left="269" Canvas.Top="164" Height="28" Width="120" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labelCPUload" Content="0%" Canvas.Left="11" Canvas.Top="97" Height="28" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labelCPUtemp" Content="0°C" Canvas.Left="154" Canvas.Top="136" Height="24" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5,2,5,5"/>
        <Label x:Name="labelGPUload" Content="0%" Canvas.Left="218" Canvas.Top="97" Height="28" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labelRAM" Content="0%" Canvas.Left="160" Canvas.Top="191" Height="24" Width="45" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5,2,5,5"/>
        <Label x:Name="labelGPUtemp" Content="0°C" Canvas.Left="363" Canvas.Top="137" Height="24" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5,2,5,5"/>
        <Label x:Name="labelVRAM" Content="0%" Canvas.Left="369" Canvas.Top="191" Height="24" Width="45" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5,2,5,5"/>
        <Label x:Name="closeButton" Content="&#xE711;" Canvas.Left="408" Foreground="White" Height="22" Width="22" HorizontalAlignment="Left" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe Fluent Icons">
            <Label.Style>
                <Style TargetType="Label">
                    <EventSetter Event="MouseEnter" Handler="CloseButton_MouseEnter"/>
                    <EventSetter Event="MouseLeave" Handler="CloseButton_MouseLeave"/>
                    <EventSetter Event="MouseDown"  Handler="CloseButton_MouseDown"/>
                </Style>
            </Label.Style>
        </Label>

    </Canvas>
</Window>
