<Window x:Class="SystemLoadTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        TextOptions.TextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        RenderOptions.BitmapScalingMode="HighQuality"
        Title="SystemLoadTracker" Height="189" Width="272" ResizeMode="NoResize" Background="Transparent" UseLayoutRounding="True" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Icon="/SLT_icon.png" MinWidth="300" MinHeight="200">

    <Border CornerRadius="10" Background="#FF404040">

        <Canvas>
            <ProgressBar x:Name="progressbarCPU" Height="40" Canvas.Left="-56" Canvas.Top="80" Width="176" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454">
                <ProgressBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-90.0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <ProgressBar x:Name="progressbarGPU" Height="40" Canvas.Left="92" Canvas.Top="83" Width="176" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ProgressBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <ProgressBar x:Name="progressbarRAM" Height="20" Canvas.Top="165" Width="80" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="60">
                <ProgressBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <ProgressBar x:Name="progressbarCPUtemp" Height="20" Canvas.Top="116" Width="80" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" Canvas.Left="60" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ProgressBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <ProgressBar x:Name="progressbarVRAM" Height="20" Canvas.Top="167" Width="80" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" Canvas.Left="212" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ProgressBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <ProgressBar x:Name="progressbarGPUtemp" Height="20" Canvas.Top="126" Width="80" RenderTransformOrigin="0.5,0.5" Foreground="#FF828282" Background="#FF545454" BorderBrush="#FF545454" Canvas.Left="212" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ProgressBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <Label x:Name="labelCPU" Content="CPU" Canvas.Left="63" Canvas.Top="16" Height="31" Width="50" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="18"/>
            <Label x:Name="labelGPU" Content="GPU" Canvas.Left="210" Canvas.Top="17" Height="29" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5,3,5,5"/>
            <Label x:Name="labelCpuClock" Content="0" Canvas.Left="63" Canvas.Top="41" Height="30" Width="75" Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Segoe UI" FontWeight="Bold"/>
            <Label x:Name="labelCPUMHz" Content="MHz" Canvas.Left="59" Canvas.Top="61" Height="28" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="labelGpuClock" Content="0" Canvas.Left="215" Canvas.Top="39" Height="28" Width="75" Foreground="White" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5,3,5,5"/>
            <Label x:Name="labelGPUMHz" Content="MHz" Canvas.Left="210" Canvas.Top="61" Height="28" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5,4,5,5"/>
            <Label x:Name="labelCPUtemperature" Content="Temp." Canvas.Left="54" Canvas.Top="95" Height="26" Width="70" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="labelCPUram" Content="RAM" Canvas.Left="56" Canvas.Top="140" Height="28" Width="120" Foreground="White" FontFamily="Arial" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="labelGPUtemperature" Content="Temp." Canvas.Left="204" Canvas.Top="98" Height="28" Width="120" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="labelGPUvram" Content="VRAM" Canvas.Left="204" Canvas.Top="142" Height="28" Width="120" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="labelCPUload" Content="0%" Canvas.Left="9" Canvas.Top="75" Height="28" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="labelCPUtemp" Content="0°C" Canvas.Left="96" Canvas.Top="116" Height="24" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5,2,5,5"/>
            <Label x:Name="labelGPUload" Content="0%" Canvas.Left="157" Canvas.Top="75" Height="28" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="labelRAM" Content="0%" Canvas.Left="100" Canvas.Top="164" Height="24" Width="46" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5,2,5,5"/>
            <Label x:Name="labelGPUtemp" Content="0°C" Canvas.Left="248" Canvas.Top="124" Height="24" Width="50" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5,2,5,5"/>
            <Label x:Name="labelVRAM" Content="0%" Canvas.Left="252" Canvas.Top="163" Height="24" Width="46" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5,2,5,5"/>
            <Label x:Name="closeButton" Content="&#xE711;" Canvas.Left="278" Foreground="White" Height="22" Width="22" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe Fluent Icons">
                <Label.Style>
                    <Style TargetType="Label">
                        <EventSetter Event="MouseEnter" Handler="CloseButton_MouseEnter"/>
                        <EventSetter Event="MouseLeave" Handler="CloseButton_MouseLeave"/>
                        <EventSetter Event="MouseDown"  Handler="CloseButton_MouseDown"/>
                    </Style>
                </Label.Style>
            </Label>

        </Canvas>
    </Border>
</Window>
